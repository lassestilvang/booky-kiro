# Docker Compose Environment Variables
# Copy this file to .env in the root directory for Docker deployments

# Database Configuration
DB_NAME=bookmark_db
DB_USER=bookmark_user
DB_PASSWORD=change_this_in_production

# Redis Configuration
# (No additional config needed - uses defaults)

# MeiliSearch Configuration
MEILISEARCH_API_KEY=change_this_in_production

# MinIO Configuration
MINIO_ACCESS_KEY=change_this_in_production
MINIO_SECRET_KEY=change_this_in_production
MINIO_CONSOLE_URL=http://localhost:9001

# JWT Configuration
JWT_SECRET=change_this_to_a_long_random_string_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_URL=http://localhost:3000

# Node Environment
NODE_ENV=production
