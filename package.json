{
  "name": "bookmark-manager-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready bookmark management platform with archiving, search, and collaboration",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:load": "npm run test:load:concurrent && npm run test:load:search && npm run test:load:snapshot && npm run test:load:api",
    "test:load:concurrent": "k6 run load-tests/concurrent-users.js",
    "test:load:search": "k6 run load-tests/search-performance.js",
    "test:load:snapshot": "k6 run load-tests/snapshot-throughput.js",
    "test:load:api": "k6 run load-tests/api-response-time.js",
    "test:load:smoke": "k6 run --vus 10 --duration 30s load-tests/concurrent-users.js",
    "seed:large-dataset": "node scripts/seed-large-dataset.js",
    "demo:setup": "bash scripts/setup-demo.sh",
    "demo:user": "node scripts/create-demo-user.js",
    "demo:seed": "node scripts/seed-demo-data.js",
    "demo:upgrade": "node scripts/upgrade-user-to-pro.js",
    "demo:api": "bash scripts/sample-api-requests.sh",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:rebuild": "docker-compose up -d --build",
    "docker:ps": "docker-compose ps",
    "docker:clean": "docker-compose down -v --rmi all"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
